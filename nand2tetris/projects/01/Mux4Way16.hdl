/**
 * 4-way 16-bit multiplexor:
 * out = a if sel == 00
 *       b if sel == 01
 *       c if sel == 10
 *       d if sel == 11
 */

CHIP Mux4Way16 {
    IN a[16], b[16], c[16], d[16], sel[2];
    OUT out[16];

    PARTS:
    // Put your code here:
    Mux16(a=a, b=c, sel=sel[1], out=outAC);
    Mux16(a=outAC, b=b, sel=sel[0], out=outABC);
    And(a=sel[1], b=sel[0], out=selD);
    Mux16(a=outABC, b=d, sel=selD, out=out);
}